<div class="container-fluid">
<div style="background-color:lightgray">
  <%= form_with(model: return_reason, local: true) do |form| %>
    <% if return_reason.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(return_reason.errors.count, "error") %> prohibited this return_reason from being saved:</h2>

        <ul>
        <% return_reason.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="container-fluid">
      <br>
      <h2 align="center"> Return Reason</h2>
      <br>
      <div class="row" >
