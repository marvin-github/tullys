<p id="notice"><%= notice %></p>

<h1>Customers</h1>
<br>
<div align="left">
  <%= link_to 'New Customer', new_customer_path, :class => "btn btn-dark" %>
</div>
<br>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Last name</th>
    <th>First Name</th>
    <th>Home Phone</th>
    <th>Mobile Phone</th>

  </tr>
  </thead>

  <tbody>
  <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.last_name %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.home_phone %></td>
        <td><%= customer.mobile_phone %></td>
        <div class="btn-group">
          <td><%= link_to 'Show', customer, class: "btn btn-outline-dark btn-sm" %></td>
          <!--<td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
          <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-outline-dark btn-sm" %></td>

        </div>
      </tr>
  <% end %>
  </tbody>
</table>






