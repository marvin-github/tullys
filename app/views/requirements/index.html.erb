<p id="notice"><%= notice %></p>

<h1>Communications</h1>

<table class="table table-striped">
  <thead>
  <tr>
      <th>Last update</th>
      <th>Owner</th>
      <th>Name</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.updated_at.strftime("%Y-%m-%d") %></td>
        <td><%= requirement.last_update_by %></td>
        <td><%= requirement.name %></td>
        <td><%= requirement.status %></td>
        <!--<td><%= link_to 'Show', requirement, class: "btn btn-outline-dark btn-sm" %></td>-->
        <td><%= link_to 'Edit', edit_requirement_path(requirement), class: "btn btn-outline-dark btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Communication', new_requirement_path, :class => "btn btn-dark" %>
