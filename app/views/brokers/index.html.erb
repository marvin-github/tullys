<p id="notice"><%= notice %></p>

<h1>Brokers</h1>
<div class="container-fluid">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Company name</th>
      <th>Work phone</th>
    </tr>
  </thead>

  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= broker.company_name %></td>
        <td><%= broker.home_phone %></td>
        <td><%= link_to 'Show', broker, class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_broker_path(broker), class: "btn btn-outline-dark btn-sm" %></td>
        <!--<td><%= link_to 'Destroy', broker, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Broker', new_broker_path, :class => "btn btn-dark" %>
</div>