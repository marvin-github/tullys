<p id="notice"><%= notice %></p>

<h1>Litters</h1>

<div class="container-fluid">
  <br>
  <div align="left">
    <%= link_to 'New Litter', new_litter_path, :class => "btn btn-dark" %>
  </div>
  <br>
  <table class="table table-striped">

  <thead>
    <tr>
      <th>Name</th>
      <th>Available date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @litters.each do |litter| %>
      <tr>
        <td><%= litter.name %></td>
        <td><%= litter.available_date %></td>
        <td><%= link_to 'Show', litter, class: "btn btn-outline-dark btn-sm" %></td>
        <td><%= link_to 'Edit', edit_litter_path(litter), class: "btn btn-outline-dark btn-sm" %></td>
        <!--<td><%= link_to 'Destroy', litter, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>