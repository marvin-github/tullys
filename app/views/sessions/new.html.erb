
<div class="container">
  <h1>Login</h1>

  <% flash.each do  |key, value| %>
    <div class="alert">
      <%= value %>
    </div>
  <% end %>
<%= form_tag '/login' do %>
    <div class="form-group">
      <%= label_tag :email, "User:" %>
      <%= text_field_tag :email, nil, class: "form-control",placeholder: "enter 'tom'" %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Password:" %>
      <%= text_field_tag :password, nil, class: "form-control",placeholder: "enter 'tom'" %>
    </div>

    <!--<div class="form-group">
      <%= link_to "Create Login", new_user_path, :class => "btn btn-link" %>
    </div>
-->
    <div align="center">
      <div class="form-group">
        <%= submit_tag "Submit", :class => "btn btn-dark" %>
      </div>
    </div>

<% end %>
  <br>

</div>
