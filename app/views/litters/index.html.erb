<p id="notice"><%= notice %></p>

<h1>Litters</h1>

<table>
  <thead>
    <tr>
      <th>Arrival date</th>
      <th>Available date</th>
      <th>Birth date</th>
      <th>Breed</th>
      <th>Broker</th>
      <th>Pedigree</th>
      <th>Dam</th>
      <th>Sire</th>
      <th>Male count</th>
      <th>Female count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @litters.each do |litter| %>
      <tr>
        <td><%= litter.arrival_date %></td>
        <td><%= litter.available_date %></td>
        <td><%= litter.birth_date %></td>
        <td><%= litter.breed.name %></td>
        <td><%= litter.broker.company_name %></td>
        <td><%= litter.dam.name %></td>
        <td><%= litter.sire.name %></td>
        <td><%= litter.male_count %></td>
        <td><%= litter.female_count %></td>
        <td><%= link_to 'Show', litter %></td>
        <td><%= link_to 'Edit', edit_litter_path(litter) %></td>
        <td><%= link_to 'Destroy', litter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

