<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Canine</th>
      <th>Purchase date</th>
      <th>Staus</th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer.last_name %></td>
        <td><%= invoice.canine.description %></td>
        <td><%= invoice.purchase_date %></td>
        <td><%= invoice.invoice_status.name %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

