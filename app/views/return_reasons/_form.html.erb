        </div>
        <div class="col-sm-2"></div>
      </div><br>

      <div class="row" >
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
          <%= form.label :description %>
           <%= form.text_field :description, id: :return_reason_description, class: "form-control"  %>
        </div>
        <div class="col-sm-2"></div>
      </div><br>


      <div align="center">
        <div class="actions" >
          <%= form.submit :class => "btn btn-dark" %>
