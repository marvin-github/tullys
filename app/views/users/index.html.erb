<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="container-fluid">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Access</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.access %></td>
        <!--<td><%= link_to 'Show', user, class: "btn btn-outline-dark btn-sm" %></td>-->
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-dark btn-sm" %></td>
        <!--<td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark btn-sm" %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
  <%= link_to 'New User', new_user_path, :class => "btn btn-dark" %>
</div>
</div>